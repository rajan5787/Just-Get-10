<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="28dp"
    tools:context="rajan5787.tikuraja.justget10.UserGuide">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginBottom="22dp"
                android:text="The goal of the game is to get..."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="42sp"
                android:padding="22dp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:background="@drawable/bg_tile_ten"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginBottom="22dp"
                android:text="For that, Combine at least two adjacent tiles with the same number."/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginBottom="22dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_guide_one"
                        style="@style/style_txt_guide_one"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_guide_two"
                        android:layout_below="@+id/txt_guide_one"
                        style="@style/style_txt_guide_one"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/style_txt_guide_one"
                        android:id="@+id/txt_guide_three"
                        android:layout_toRightOf="@+id/txt_guide_two"
                        android:layout_below="@+id/txt_guide_one"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="56dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:text="->"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:background="@drawable/bg_tile_two"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="18dp"
                    android:textSize="28sp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginBottom="22dp"
                android:text="Cell with number+1 will appear at the position you tap."/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
